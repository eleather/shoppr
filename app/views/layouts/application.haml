:css


%html
  %head
    %title Shoppr
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'https://si2.twimg.com/a/1302724321/phoenix/css/phoenix.bundle.css'
    = javascript_include_tag 'jquery/jquery-1.5.1.min.js'
    = #javascript_include_tag 'jquery/jquery-ui-1.8.11.ui-lightness.min.js'
    = javascript_include_tag :all
    = csrf_meta_tag

  %body.user-style-twttr{:style => 'background-image: none'}
    #doc
      #top-stuff
        #banners{:style => 'clear:both;'}
        #top-bar-outer
          #top-bar-bg
          #top-bar
            #top-bar-inside
              #static-links
                #logo
                  %a{:href => '/'} Twitter
                #global-nav
                  %ul
                    %li#global-nav-home
                      %a{:href => '/'} Home
                #sections
              .active-links
                #session.loggedin
                  %a.profile-links{:href => '#'}
                    #profile-image
                      %img{:src => 'https://si0.twimg.com/profile_images/251068501/India_233_normal.JPG'}
                  %span#screen-name eleather
                  .dropdown
                    %ul.user-dropdown
                      %li
                        %a{:href => '/settings/account'} Settings
                      %li
                        %a{:href => 'http://support.twitter.com'} Help
                %span.vr
                %a#new-tweet{:title => 'New Tweet'}
                  %span New Tweet
          #message-drawer

      #page-outer
        #page-container{:style => 'background-color: lightgreen;'}
          %div
            #left-content.main-content
              = yield(:left_content)
            #right-content.dashboard
              = yield(:right_content)
            #details-pane-outer
              .details-pane-shell
                .details-pane


