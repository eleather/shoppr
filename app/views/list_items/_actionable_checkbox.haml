:javascript
  jQuery(function() {
    jQuery('##{id_to_replace}')
      .bind('ajax:complete', function(et, e) {
        jQuery('##{id_to_replace}').html(e.responseText);
      });
  });

%a{:href => toggle_completion_list_item_path(list_item, :id_to_replace => id_to_replace), 'data-remote' => 'true'}
  %img.tweet-profile-image{:src => "/images/checkbox_#{list_item.completed? ? "" : "un"}checked.png", :width => 24, :height => 24}